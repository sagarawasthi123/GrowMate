<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YieldPrediction">
    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Crop Type -->
        <TextView
            android:id="@+id/cropTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crop Type"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/spinnerCropType"
            android:layout_below="@id/cropTypeLabel"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#98ff98"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>

        <!-- Soil Type -->
        <TextView
            android:id="@+id/soilTypeLabel"
            android:layout_below="@id/spinnerCropType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soil Type"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/spinnerSoilType"
            android:layout_below="@id/soilTypeLabel"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#98ff98"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>

        <!-- Soil pH -->
        <TextView
            android:id="@+id/soilPhLabel"
            android:layout_below="@id/spinnerSoilType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soil pH (0-14)"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/soilPhInput"
            android:layout_below="@id/soilPhLabel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:hint="Enter Soil pH"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"/>

        <!-- Soil Quality -->
        <TextView
            android:id="@+id/soilQualityLabel"
            android:layout_below="@id/soilPhInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soil Quality (0-100)"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/soilQualityInput"
            android:layout_below="@id/soilQualityLabel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:hint="Enter Soil Quality"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"/>

        <!-- Soil Temperature -->
        <TextView
            android:id="@+id/soilTempLabel"
            android:layout_below="@id/soilQualityInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soil Temperature (Â°C)"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/soilTempInput"
            android:layout_below="@id/soilTempLabel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:hint="Enter Soil Temperature"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"/>

        <!-- Soil Humidity -->
        <TextView
            android:id="@+id/soilHumidityLabel"
            android:layout_below="@id/soilTempInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soil Humidity (0-100%)"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/soilHumidityInput"
            android:layout_below="@id/soilHumidityLabel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:hint="Enter Soil Humidity"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"/>

        <!-- Wind Speed -->
        <TextView
            android:id="@+id/windSpeedLabel"
            android:layout_below="@id/soilHumidityInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wind Speed (km/h)"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/windSpeedInput"
            android:layout_below="@id/windSpeedLabel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:hint="Enter Wind Speed"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"/>

        <!-- Nitrogen -->
        <TextView
            android:id="@+id/nitrogenLabel"
            android:layout_below="@id/windSpeedInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nitrogen (0-200)"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/nitrogenInput"
            android:layout_below="@id/nitrogenLabel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:hint="Enter Nitrogen"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"/>

        <!-- Phosphorus -->
        <TextView
            android:id="@+id/phosphorusLabel"
            android:layout_below="@id/nitrogenInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phosphorus (0-200)"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/phosphorusInput"
            android:layout_below="@id/phosphorusLabel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:hint="Enter Phosphorus"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"/>

        <!-- Potassium -->
        <TextView
            android:id="@+id/potassiumLabel"
            android:layout_below="@id/phosphorusInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Potassium (0-200)"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/potassiumInput"
            android:layout_below="@id/potassiumLabel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:hint="Enter Potassium"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"/>

        <!-- Average Rainfall -->
        <TextView
            android:id="@+id/rainfallLabel"
            android:layout_below="@id/potassiumInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Rainfall (0-1000 mm)"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/rainfallInput"
            android:layout_below="@id/rainfallLabel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:hint="Enter Average Rainfall"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"/>

        <!-- Fetch Data Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnFetchData"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rainfallInput"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#98ff98">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Fetch Data"
                    android:textColor="#2f7f33"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Submit Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnSubmit"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnFetchData"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#98ff98">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Submit"
                    android:textColor="#2f7f33"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</ScrollView>