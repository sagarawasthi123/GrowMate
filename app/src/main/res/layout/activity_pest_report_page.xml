<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#ffffff"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PestReportPage">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardElevation="0dp"
            android:id="@+id/cv1"
            android:layout_marginTop="0dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pest Report"
                    android:layout_centerInParent="true"
                    android:textSize="20dp"
                    android:fontFamily="@font/poppins_bold"/>


            </RelativeLayout>



        </androidx.cardview.widget.CardView>




    <Spinner
        android:id="@+id/spinnerPestType"
        android:layout_below="@+id/cv1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#98ff98"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        />




    <!-- District Dropdown -->
    <Spinner
        android:id="@+id/spinnerDistrict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#98ff98"
        android:layout_below="@id/spinnerPestType"
        android:layout_marginTop="20dp"/>

    <!-- Submit Button -->



    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btnSubmit"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/spinnerDistrict"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"

        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="25dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#98ff98">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"

                android:paddingHorizontal="24dp"

                android:paddingVertical="12dp"
                android:text="Submit"
                android:textColor="#2f7f33"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- ImageView for Pest -->
    <ImageView
        android:id="@+id/imagePest"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="gone"
        android:layout_below="@id/btnSubmit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"

        android:contentDescription="Pest Image"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"/>

</RelativeLayout>



