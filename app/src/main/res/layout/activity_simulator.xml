<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="#F5F5F5"



    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimulatorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:layout_marginTop="-20dp"
        android:paddingRight="16dp"
        >



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/card"
            android:elevation="2dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/leaf_svgrepo_com"
                    android:id="@+id/leaf"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/leaf"

                    android:fontFamily="@font/poppins_bold"
                    android:text="Farm Simulation"
                    android:textColor="#38893C"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>




            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/landLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Land Area:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_below="@id/card"
            android:layout_marginTop="20dp"/>







        <!-- Land Input -->
        <EditText
            android:id="@+id/landInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Land (in acres)"
            android:inputType="numberDecimal"
            android:layout_below="@id/landLabel"

            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"/>

        <!-- Water Label -->
        <TextView
            android:id="@+id/waterLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water (Kilolitres/acre): 1000"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_below="@id/landInput"
            android:layout_marginTop="20dp"/>

        <!-- Water Slider -->
        <SeekBar
            android:id="@+id/waterSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="#98ff98"
            android:thumbTint="#38893C"
            android:layout_below="@id/waterLabel"
            android:layout_marginTop="8dp"/>

        <!-- N Fertilizer -->
        <TextView
            android:id="@+id/nLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nitrogen (N): 80 kg/acre"
            android:textSize="16sp"
            android:layout_below="@id/waterSeekBar"
            android:layout_marginTop="20dp"/>

        <SeekBar
            android:id="@+id/nSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="#98ff98"
            android:thumbTint="#38893C"
            android:layout_below="@id/nLabel"
            android:layout_marginTop="8dp"/>

        <!-- P Fertilizer -->
        <TextView
            android:id="@+id/pLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phosphorus (P): 40 kg/acre"
            android:textSize="16sp"
            android:layout_below="@id/nSeekBar"
            android:layout_marginTop="20dp"/>

        <SeekBar
            android:id="@+id/pSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="#98ff98"
            android:thumbTint="#38893C"
            android:layout_below="@id/pLabel"
            android:layout_marginTop="8dp"/>

        <!-- K Fertilizer -->
        <TextView
            android:id="@+id/kLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Potassium (K): 80 kg/acre"
            android:textSize="16sp"
            android:layout_below="@id/pSeekBar"
            android:layout_marginTop="20dp"/>

        <SeekBar
            android:id="@+id/kSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="#98ff98"
            android:thumbTint="#38893C"
            android:layout_below="@id/kLabel"
            android:layout_marginTop="8dp"/>

        <!-- Season Dropdown -->
        <TextView
            android:id="@+id/seasonLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Season:"
            android:textSize="16sp"
            android:layout_below="@id/kSeekBar"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/seasonSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seasonLabel"
            android:layout_marginTop="8dp"
            android:backgroundTint="#98ff98"
            />

        <!-- Soil Type Dropdown -->
        <TextView
            android:id="@+id/soilLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soil Type:"
            android:textSize="16sp"
            android:layout_below="@id/seasonSpinner"
            android:layout_marginTop="20dp"/>



        <Spinner
            android:id="@+id/soilSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/soilLabel"
            android:layout_marginTop="8dp"
            android:backgroundTint="#98ff98"/>

        <!-- Simulate Button -->

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/simulateButton"

            android:layout_marginTop="30dp"
            android:layout_below="@+id/soilSpinner"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:clickable="true"
            android:focusable="true"

            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#98ff98">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"

                    android:paddingHorizontal="24dp"

                    android:paddingVertical="12dp"
                    android:text="Submit"
                    android:textColor="#2f7f33"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>




        <!-- Result Text -->


    </RelativeLayout>
</ScrollView>
